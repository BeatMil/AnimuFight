extends Node2D

#############################################################
## Node Ref
#############################################################
@onready var timer: Timer = $Timer


#############################################################
## Built-in
#############################################################
func _ready() -> void:
	timer.start()


#############################################################
## Signals
#############################################################
func _on_area_2d_body_entered(body: Node2D) -> void:
	if body.is_in_group("enemy"):
		body.hitted()


func _on_timer_timeout() -> void:
	queue_free()
